<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:title="@string/set_unitMeasure"
        android:key="settings_unitMeasure" >
        
        <ListPreference 
            android:title="@string/set_kgLbs"
            android:key="settings_kgLbs"
            android:summary="@string/set_kgLbs_summary"
            android:entries="@array/sa_kgLbs"
            android:entryValues="@array/sa_kgLbsValues" />
        
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/set_data"
        android:key="settings_data" >
        
        <PreferenceScreen 
            android:title="@string/set_weightChange" 
            android:key="settings_weightChange" >
            
            <no.whg.workout.SetWeightDialog_1
                android:title="@string/ex_squats"
                android:key="settings_squats"
                android:summary="@string/set_squats_summary" />
            
            <no.whg.workout.SetWeightDialog_2
                android:title="@string/ex_benchPress"
                android:key="settings_benchPress"
                android:summary="@string/set_benchPress_summary" />
            
            <no.whg.workout.SetWeightDialog_3
                android:title="@string/ex_rowing"
                android:key="settings_rowing"
                android:summary="@string/set_rowing_summary" />
            
            <no.whg.workout.SetWeightDialog_4
                android:title="@string/ex_deadlift"
                android:key="settings_deadlift"
                android:summary="@string/set_deadlift_summary" />
            
            <no.whg.workout.SetWeightDialog_5
                android:title="@string/ex_ohp"
                android:key="settings_ohp"
                android:summary="@string/set_ohp_summary" />
            
        </PreferenceScreen>
        
        <PreferenceScreen 
            android:title="@string/set_weightIncrements"
            android:key="settings_weightIncrements" >
            
            <no.whg.workout.ChangeWeightIncrementDialog_1
                android:title="@string/ex_squats"
                android:key="settings_incrementSquats"
                android:summary="@string/set_weightIncrementSquats" />
            
            <no.whg.workout.ChangeWeightIncrementDialog_2
                android:title="@string/ex_benchPress"
                android:key="settings_incrementBenchPress"
                android:summary="@string/set_weightIncrementBenchpress" />
                        
            <no.whg.workout.ChangeWeightIncrementDialog_3
                android:title="@string/ex_rowing"
                android:key="settings_incrementRowing"
                android:summary="@string/set_weightIncrementRowing" />
                                    
            <no.whg.workout.ChangeWeightIncrementDialog_4
                android:title="@string/ex_deadlift"
                android:key="settings_incrementDeadlift"
                android:summary="@string/set_weightIncrementDeadlift" />
                                                
            <no.whg.workout.ChangeWeightIncrementDialog_5
                android:title="@string/ex_ohp"
                android:key="settings_incrementOhp"
                android:summary="@string/set_weightIncrementOhp" />
            
        </PreferenceScreen>
         
        <no.whg.workout.ResetDataAlertDialog
            android:title="@string/set_dataReset"
            android:key="settings_dataReset"
            android:summary="@string/set_dataReset_summary" />
        
    </PreferenceCategory>
</PreferenceScreen>