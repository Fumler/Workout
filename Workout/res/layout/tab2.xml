<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        
    	<!-- TOP -->
        <TextView
	        android:id="@+id/front_header"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/tv_welcomeMessage"
	        style="@style/style_bigWhiteText"
	        android:layout_marginTop="15dp"
	        android:textSize="26sp"
	        android:textAllCaps="true"
	        android:gravity="center"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5dp"
	        android:padding="5dp"/>
        
        <TextView
	        android:id="@+id/front_filler"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/tv_first"
	        style="@style/style_whiteBoxRegular"
	        android:layout_marginTop="15dp"
	        android:textSize="13sp"
	        android:textAllCaps="false"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5dp"
	        android:padding="5dp"/>
        
        <!-- WORKOUT DISPLAY -->
        <LinearLayout 
            android:id="@+id/tab2_workout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
	        style="@style/style_whiteBoxRegular" >
            
            <!-- WORKOUT HEADER -->
            <TextView
		        android:id="@+id/front_workout_header"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/front_tv_next"
		        style="@style/style_bigWhiteText"
		        android:layout_marginTop="5dp"
		        android:textSize="24sp"
		        android:textAllCaps="true"
		        android:gravity="center"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="5dp"
		        android:padding="5dp" />
            
            <!-- WORKOUT LAYOUTS -->
            <!-- Squats -->
            <RelativeLayout
                android:id="@+id/tab2_squats"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        style="@style/style_whiteBoxRegular" >
	            
	            <!-- Exercise name -->
	            <TextView
			        android:id="@+id/front_tv_workout_squats"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/guide_title_section2"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_alignParentLeft="true" />
	            
            	<!-- Exercise weight -->
	            <TextView
			        android:id="@+id/front_tv_workout_squats_weight"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_squats_weight"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_alignParentRight="true" />
	            
            	<!-- Exercise x -->
	            <TextView
			        android:id="@+id/front_tv_workout_squats_x"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_x"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_squats_weight" />
	            
            	<!-- Exercise sets -->
	            <TextView
			        android:id="@+id/front_tv_workout_squats_sets"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_squats_sets"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_squats_x" />
            
            </RelativeLayout>
            
            <!-- Bench press -->
            <RelativeLayout
                android:id="@+id/tab2_bench"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        style="@style/style_whiteBoxRegular" >
	            
	            <!-- Exercise name -->
	            <TextView
			        android:id="@+id/front_tv_workout_bench"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/guide_title_section3"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_alignParentLeft="true" />
	            
            	<!-- Exercise weight -->
	            <TextView
			        android:id="@+id/front_tv_workout_bench_weight"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_bench_weight"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_alignParentRight="true" />
	            
            	<!-- Exercise x -->
	            <TextView
			        android:id="@+id/front_tv_workout_bench_x"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_x"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_bench_weight" />
	            
            	<!-- Exercise sets -->
	            <TextView
			        android:id="@+id/front_tv_workout_bench_sets"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_bench_sets"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_bench_x" />
            
            </RelativeLayout>
            
            <!-- Overhead press -->
            <RelativeLayout
                android:id="@+id/tab2_ohp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        style="@style/style_whiteBoxRegular" >
	            
	            <!-- Exercise name -->
	            <TextView
			        android:id="@+id/front_tv_workout_ohp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/guide_title_section5"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
