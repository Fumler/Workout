            <!-- Rowing -->
            <RelativeLayout
                android:id="@+id/tab2_rowing"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        style="@style/style_whiteBoxRegular" >
	            
	            <!-- Exercise name -->
	            <TextView
			        android:id="@+id/front_tv_workout_rowing"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/guide_title_section6"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_alignParentLeft="true" />
	            
            	<!-- Exercise weight -->
	            <TextView
			        android:id="@+id/front_tv_workout_rowing_weight"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_rowing_weight"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_alignParentRight="true" />
	            
            	<!-- Exercise x -->
	            <TextView
			        android:id="@+id/front_tv_workout_rowing_x"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_x"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_rowing_weight" />
	            
            	<!-- Exercise sets -->
	            <TextView
			        android:id="@+id/front_tv_workout_rowing_sets"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_bench_sets"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_rowing_x" />
            
            </RelativeLayout>
            
        </LinearLayout>
    
</LinearLayout>
