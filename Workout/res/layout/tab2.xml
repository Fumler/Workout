			        android:padding="5dp"
			        android:layout_alignParentRight="true" />
	            
            	<!-- Exercise x -->
	            <TextView
			        android:id="@+id/front_tv_workout_deadlift_x"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_x"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_deadlift_weight" />
	            
            	<!-- Exercise sets -->
	            <TextView
			        android:id="@+id/front_tv_workout_deadlift_sets"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_bench_sets"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_deadlift_x" />
            
