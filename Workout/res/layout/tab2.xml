            	<!-- Exercise sets -->
	            <TextView
			        android:id="@+id/front_tv_workout_ohp_sets"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_bench_sets"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_toLeftOf="@id/front_tv_workout_ohp_x" />
            
            </RelativeLayout>
            
            <!-- Deadlift -->
            <RelativeLayout
                android:id="@+id/tab2_deadlift"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        style="@style/style_whiteBoxRegular" >
	            
	            <!-- Exercise name -->
	            <TextView
			        android:id="@+id/front_tv_workout_deadlift"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/guide_title_section4"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginBottom="5dp"
			        android:padding="5dp"
			        android:layout_alignParentLeft="true" />
	            
            	<!-- Exercise weight -->
	            <TextView
			        android:id="@+id/front_tv_workout_deadlift_weight"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/front_tv_deadlift_weight"
			        style="@style/style_bigWhiteText"
			        android:layout_marginTop="5dp"
			        android:textSize="18sp"
			        android:textAllCaps="true"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
